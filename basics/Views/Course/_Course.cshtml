  @model Course
  <div class="card mb-3 shadow-sm" id="@Model.Id">
                <div class="row g-0 align-items-center">

                    <!-- IMAGE -->
                    <div class="col-md-4">
                        <img src="~/img/@Model.Image"
                             class="img-fluid rounded-start course-img"
                             alt="@Model.Title" />
                    </div>

                    <!-- CONTENT -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <p class="card-text">@Model.Description</p>
                        </div>
                    </div>

                </div>
            </div>